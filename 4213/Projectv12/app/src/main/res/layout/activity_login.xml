<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myproject.projectv12.Login">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:autoSizeMaxTextSize="@android:dimen/thumbnail_width"
        android:text="WELCOME"
        android:textColor="@color/Black"
        android:textColorLink="@color/Fire_Engine_Red"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147"
        tools:textSize="36sp" />

    <Button
        android:id="@+id/bUserLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="225dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/AliceBlue"
        android:text="User Login"
        android:textColor="@color/Charcoal"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bAdminLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.447"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/bAdminLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="224dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/AliceBlue"
        android:text="Business"
        android:textColor="@color/Charcoal"
        android:textColorLink="@color/Charcoal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
